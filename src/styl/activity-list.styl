.no-activities
  width: 100%
  text-align: center

.activity-list
  overflow-x: hidden
  overflow-y: scroll
  height: calc(100% - 24px)
  width: 95%
  margin: 24px auto 0
  -webkit-overflow-scrolling: touch

.activity-list__activity
  margin: 10px 0
  padding: 30px
  background-color: #3e3e3e
  color: #ecf0f1
  font-size: 1.4rem
  font-weight: 200
  transition: padding 300ms cubic-bezier(0.68, -0.55, 0.27, 1.55), background-color 300ms


.activity-list__activity--active
  padding: 50px 30px !important
  background-color: #646565
